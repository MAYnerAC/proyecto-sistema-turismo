@model ProyectoSistemaTurismo.Models.Usuario

@{
    ViewBag.Title = "Crear Nuevo Usuario";
}

<h2>Crear Nuevo Usuario</h2>

@using (Html.BeginForm("Crear", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <!-- Nombre -->
    <div class="form-group">
        @Html.LabelFor(model => model.nombre, "Nombre", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", placeholder = "Ingrese el nombre del usuario", maxlength = 100, required = "required" })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Apellido -->
    <div class="form-group">
        @Html.LabelFor(model => model.apellido, "Apellido", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.apellido, new { @class = "form-control", placeholder = "Ingrese el apellido del usuario", maxlength = 100, required = "required" })
            @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Email -->
    <div class="form-group">
        @Html.LabelFor(model => model.email, "Correo Electrónico", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Ingrese el correo electrónico", type = "email", required = "required" })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Contraseña -->
    <div class="form-group">
        @Html.LabelFor(model => model.contrasena, "Contraseña", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.contrasena, new { @class = "form-control", placeholder = "Ingrese la contraseña", required = "required" })
            @Html.ValidationMessageFor(model => model.contrasena, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Teléfono -->
    <div class="form-group">
        @Html.LabelFor(model => model.telefono, "Teléfono", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.telefono, new { @class = "form-control", placeholder = "Ingrese el teléfono", maxlength = 15 })
            @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Tipo de Usuario -->
    <div class="form-group">
        @Html.Label("Tipo de Usuario", "Tipo de Usuario", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.id_tipo_usuario, (SelectList)ViewBag.TiposUsuario, "Seleccione un tipo de usuario", new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.id_tipo_usuario, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Botones -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Guardar</button>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
