@{
    ViewBag.Title = "Agregar Imagen";
}

<h2>Agregar Imagen a la Galería</h2>

@using (Html.BeginForm("AgregarImagen", "Galeria", FormMethod.Post, new { enctype = "multipart/form-data", area = "Proveedor" }))
{
    <div class="form-group">
        <label for="archivoImagen">Seleccionar Imagen</label>
        <input type="file" name="archivoImagen" id="archivoImagen" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="descripcion">Descripción</label>
        <textarea name="descripcion" id="descripcion" class="form-control" placeholder="Descripción de la imagen"></textarea>
    </div>

    <div class="form-group">
        <label for="tipoImagen">Tipo de Imagen</label>
        <input type="text" name="tipoImagen" id="tipoImagen" class="form-control" placeholder="Ejemplo: Exterior, Interior, Comida" />
    </div>

    <button type="submit" class="btn btn-success">Subir Imagen</button>
    @Html.ActionLink("Cancelar", "Index", "Galeria", new { area = "Proveedor" }, new { @class = "btn btn-secondary" })
}
