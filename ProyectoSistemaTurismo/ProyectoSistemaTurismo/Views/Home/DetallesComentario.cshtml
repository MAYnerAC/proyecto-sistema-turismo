@model ProyectoSistemaTurismo.Models.Comentario

<h2>Detalles del Comentario</h2>

<div>
    <h3>Comentario de @Model.Usuario.nombre</h3>
    <p>@Model.contenido</p> <!-- Mostrar el contenido del comentario -->
    <p>Fecha: @Model.fecha_comentario</p> <!-- Mostrar la fecha del comentario -->
</div>

<h4>Fotos Asociadas:</h4>
@if (ViewBag.FotosComentario != null && ViewBag.FotosComentario.Any())
{
    <ul>
        @foreach (var foto in ViewBag.FotosComentario)
        {
            <li>
                <img src="@foto.Url" alt="Foto del comentario" style="width: 200px; height: auto;" />
                <!-- Asegúrate de usar la propiedad correcta que almacene la URL de la foto -->
            </li>
        }
    </ul>
}
else
{
    <p>No hay fotos asociadas a este comentario.</p>
}
